  top: 0;
  left: 0;
  overflow: hidden;
}

.header_config {
  width: 32px;
  height: 32px;
  top: 26px;
  left: 10px;
  transition: all 0.8s;
  position: absolute;
  -webkit-box-shadow: inset 0 0 1px rgba(204, 204, 204, 0.8);
  box-shadow: inset 0 0 1px rgba(204, 204, 204, 0.8);
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.1);
  color: #fff;
}
.iconfont {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  font-size: 18px;
  font-weight: lighter;
}

.icon-edit:before { content: "\eb31"; }
