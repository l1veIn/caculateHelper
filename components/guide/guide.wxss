.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 103;
  background: #000;
  opacity: 0.7;
  overflow: hidden;
}
.page1{
  z-index: 104;
  width: 100%;
  height: 100%;
